{
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es5"
	},
	"include": [
		"src",
		"test"
	],
	"exclude": [
		"node_modules"
	],
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"skipMetadataEmit": false
	}
}
