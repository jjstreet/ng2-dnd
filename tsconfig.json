{
	"compilerOptions": {
		"rootDir":".",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es2015"
		],
		"module": "commonjs",
		"moduleResolution": "node",
		"outDir": "dist",
		"sourceMap": true,
		"target": "es5"
	},
	"angularCompilerOptions": {
		"skipTemplateCodegen": true,
		"skipMetadataEmit": false
	},
	"exclude": [
		"node_modules"
	]
}
